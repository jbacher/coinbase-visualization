  body
    //- include includes/header
    //- block content
    //- include includes/footer
    .left Click on a transaction to see its value fluctuaction
        ul.transactions
            for transaction in transactions
                li.transaction-container
                    div amt = #{transaction.amount.amount} #{transaction.amount.currency}
                    div You paid $#{transaction.native_amount.amount} originally
                    div bought on #{transaction.created_at} 
    .right
        #container(style="width:100%", height="400")
    script.
        $(function () { 
            var myChart = Highcharts.chart('container', {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Value Change After Transaction'
                },
                xAxis: {
                    categories: ['Original Value', 'Current Value']
                },
                yAxis: {
                    title: {
                        text: 'Amount USD'
                    }
                },
                series: [{
                    name: 'Jane',
                    data: [1, 0]
                }, {
                    name: 'John',
                    data: [5, 7]
                }]
            });
        });